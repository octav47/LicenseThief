{
  "appenders": [
    {
      "type": "console",
      "level": "INFO"
    },
    {
      "type": "file",
      "filename": "log/console.log",
      "maxLogSize": 20480,
      "backups": 10
    },
    {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "log/errors.log"
      }
    }
  ]
}